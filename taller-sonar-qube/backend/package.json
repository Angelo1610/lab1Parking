{
  "name": "parking-api",
  "version": "1.0.0",
  "description": "Secure REST API for parking zones and spaces",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --coverage --coverageReporters=lcov --coverageReporters=text --forceExit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "body-parser": "^1.19.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": ["./tests/setup.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!tests/**",
      "!coverage/**",
      "!node_modules/**",
      "!utils/logger.js"
    ]
  },
  "author": "",
  "license": "ISC"
}